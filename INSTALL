-----------------------------
sudo -sH
echo 'deb http://rep.logentries.com/ maverick main' >/etc/apt/sources.list.d/logentries.list
gpg --keyserver pgp.mit.edu --recv-keys C43C79AD && gpg -a --export C43C79AD | apt-key add -
